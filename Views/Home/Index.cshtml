@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 mb-4">Welcome to Student Management System</h1>
        <p class="lead mb-4">
            This web application helps you <strong>manage student records</strong>, <strong>courses</strong>, and <strong>grades</strong> efficiently.
        </p>
    </div>

    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-people-fill fs-1 mb-3 text-primary"></i>
                    <h5 class="card-title">Manage Students</h5>
                    <p class="card-text">Add, edit, and delete student information seamlessly.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-journal-bookmark-fill fs-1 mb-3 text-success"></i>
                    <h5 class="card-title">Manage Courses</h5>
                    <p class="card-text">Organize courses and assign students efficiently.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-bar-chart-fill fs-1 mb-3 text-warning"></i>
                    <h5 class="card-title">Track Performance</h5>
                    <p class="card-text">Monitor grades and academic progress with ease.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <p class="mb-1">Built with <strong>ASP.NET Core MVC</strong> and <strong>PostgreSQL</strong>.</p>
        <p class="mb-0">Developed by <em>Abdullah Tarek</em>.</p>
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}
